---
import Carousel from '../common/Carousel.astro';
---

<div class="mx-auto max-w-7xl border-b py-2 text-[#393938] px-6">
  <h3 class="font-bold lg:text-3xl md:text-2xl text-xl">Trending Now</h3>
</div>

<Carousel />
<div class="mx-auto max-w-7xl py-4 px-6">
  <div class="">
    <div
      class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 h-full gap-4 justify-between py-2"
    >
      {
        Array(4)
          .fill(0)
          .map((side) => {
            return (
              <div class="flex items-center gap-4 bg-white sm:p-2 rounded-lg shadow-sm relative">
                <img
                  class="w-20 h-20 object-cover rounded"
                  src="/assets/latest-side.png"
                  alt="Article image"
                />
                <div>
                  <span class="block text-xs font-semibold text-[#FF852E] uppercase">
                    Experience
                  </span>
                  <h4 class=" font-bold max-w-[300px] text-sm  leading-tight">
                    Nice in 5 Shops: handmade, artisanal and vintage goods
                  </h4>
                  <span class="block text-xs text-gray-500">
                    May 30, 2024 â€¢ 6 min read
                  </span>
                </div>
              </div>
            );
          })
      }
    </div>
  </div>
</div>
